	<insert id="insertBoard" parameterType="board">
		INSERT INTO DIARY_BOARD (SEQ, BOARD_TITLE, WRITER, BOARD_CONTENT,REGDATE,HITS,ANIMAL_CLASS) 
		VALUES ((SELECT NVL(MAX(SEQ),0) + 1 FROM DIARY_BOARD), 
				#{board_title}, 3, 123456789,sysdate,0,0)
	</insert>
